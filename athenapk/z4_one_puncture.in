# Athena++ (Kokkos version) input file for spherical blast problem
<comment>
problem   = z4c one puncture
reference = e.g. Cook. Living Rev. Relativ. 3, 5 (2000)
<job>
basename  = z4c      # problem ID: basename of output filenames
<mesh>
nghost    = 4          # Number of ghost cells
nx1       = 256        # Number of zones in X1-direction
x1min     = -1024       # minimum value of X1
x1max     = 1024        # maximum value of X1
ix1_bc    = outflow   # inner-X1 boundary flag
ox1_bc    = outflow   # outer-X1 boundary flag
nx2       = 256        # Number of zones in X2-direction
x2min     = -1024      # minimum value of X2
x2max     = 1024       # maximum value of X2
ix2_bc    = outflow   # inner-X2 boundary flag
ox2_bc    = outflow   # outer-X2 boundary flag
nx3       = 256        # Number of zones in X3-direction
x3min     = -1024      # minimum value of X3
x3max     = 1024       # maximum value of X3
ix3_bc    = outflow   # inner-X3 boundary flag
ox3_bc    = outflow   # outer-X3 boundary flag
<meshblock>
nx1       = 64         # Number of cells in each MeshBlock, X1-dir
nx2       = 64         # Number of cells in each MeshBlock, X2-dir
nx3       = 64         # Number of cells in each MeshBlock, X3-dir
<time>
evolution  = dynamic    # dynamic/kinematic/static
integrator = rk4        # time integration algorithm
cfl_number = 0.1        # The Courant, Friedrichs, & Lewy (CFL) Number
nlim       = 30         # cycle limit
tlim       = 100        # time limit
ndiag      = 1          # cycles between diagostic output
<z4c>
diss       = 1.
nrad_wave_extraction = 0
<problem>
pgen_name = z4c_one_puncture
punc_ADM_mass = 1.
<mesh_refinement>
refinement       = static    # type of refinement
<refinement1>
level = 1
x1min = -512
x1max = 512
x2min = -512
x2max = 512
x3min = -512
x3max = 512
<refinement2>
level = 2
x1min = -256
x1max = 256
x2min = -256
x2max = 256
x3min = -256
x3max = 256
<refinement3>
level = 3
x1min = -128
x1max = 128
x2min = -128
x2max = 128
x3min = -128
x3max = 128
